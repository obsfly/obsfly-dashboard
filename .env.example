# ===========================================
# ENVIRONMENT
# ===========================================
ENVIRONMENT=dev

# ===========================================
# APPLICATION PORTS
# ===========================================
FRONTEND_PORT=3000
BACKEND_PORT=8080
LICENSE_SERVER_PORT=8081

# ===========================================
# PROMETHEUS METRICS PORTS
# ===========================================
BACKEND_METRICS_PORT=9090
LICENSE_METRICS_PORT=9091
FRONTEND_METRICS_PORT=9092

# ===========================================
# METRICS CONFIGURATION
# ===========================================
# Enable/disable metrics per service
ENABLE_BACKEND_METRICS=true
ENABLE_LICENSE_METRICS=true
ENABLE_FRONTEND_METRICS=false

# Specific metrics to track
METRICS_API_LATENCY=true
METRICS_API_ERRORS=true
METRICS_API_SUCCESS=true
METRICS_P90=true
METRICS_P95=true
METRICS_P99=true
METRICS_REQUEST_COUNT=true
METRICS_RESPONSE_SIZE=true

# ===========================================
# DATABASE PORTS
# ===========================================
POSTGRES_PORT=5433
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
REDIS_PORT=6379

# ===========================================
# DATABASE CREDENTIALS
# ===========================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=obsfly_license

CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_DB=metrics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

REDIS_URL=redis:6379

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET=change-this-in-production-to-a-secure-random-string-min-32-chars
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# DATA GENERATOR (Dev Only)
# ===========================================
NUM_HOSTS=20
BATCH_INTERVAL_SECONDS=30
ACCOUNT_ID=1
SUB_ACCOUNT_ID=1

# ===========================================
# MIGRATION CONTROLLER
# ===========================================
MIGRATION_CONTROLLER_PATH=./bin/migration-controller
AUTO_MIGRATE=true

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
